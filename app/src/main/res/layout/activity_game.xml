<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.serba.snookertracker_1856482.activities.GameActivity"
    tools:layout_editor_absoluteY="81dp">

    <include
        android:id="@+id/team_1_player_1"
        layout="@layout/game_player_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/team_1_player_2"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_one_label"
        app:layout_constraintVertical_chainStyle="packed" />

    <include
        android:id="@+id/team_1_player_2"
        layout="@layout/game_player_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_1_player_1" />

    <include
        android:id="@+id/team_2_player_2"
        layout="@layout/game_player_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/team_2_player_1" />

    <include
        android:id="@+id/team_2_player_1"
        layout="@layout/game_player_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/team_2_player_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/player_two_label"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/total_points"
        android:textSize="@dimen/textSubheadingSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/team_2_player_2"
        app:layout_constraintTop_toBottomOf="@+id/team_2_player_2" />

    <TextView
        android:id="@+id/team_2_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/dummy_score"
        android:textSize="@dimen/textSubheadingSize"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/total_points"
        android:textSize="@dimen/textSubheadingSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/team_1_player_2"
        app:layout_constraintTop_toBottomOf="@+id/team_1_player_2" />

    <TextView
        android:id="@+id/team_1_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/dummy_score"
        android:textSize="@dimen/textSubheadingSize"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/player_one_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?attrColorPrimary"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/team_one"
        android:textAllCaps="true"
        android:textColor="?attrTextColor"
        android:textSize="@dimen/textSizeTitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_two_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?attrColorPrimary"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/team_two"
        android:textAllCaps="true"
        android:textColor="?attrTextColor"
        android:textSize="@dimen/textSizeTitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/striking_player_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/dummy_name"
        android:textSize="@dimen/textHeadingSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="?attrColorPrimary"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/now_striking"
        android:textAllCaps="true"
        android:textColor="?attrTextColor"
        android:textSize="@dimen/textSizeTitle"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/striking_player_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_yellow_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="handlePottedBall"
        app:backgroundTint="@color/ballYellow"
        app:layout_constraintBottom_toBottomOf="@+id/ball_green_button"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/ball_green_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ball_green_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_green_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="handlePottedBall"
        app:backgroundTint="@color/ballGreen"
        app:layout_constraintBottom_toBottomOf="@+id/ball_brown_button"
        app:layout_constraintEnd_toStartOf="@+id/ball_brown_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ball_yellow_button"
        app:layout_constraintTop_toTopOf="@+id/ball_brown_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_brown_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="handlePottedBall"
        app:backgroundTint="@color/ballBrown"
        app:layout_constraintBottom_toTopOf="@+id/ball_blue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ball_green_button"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_blue_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="handlePottedBall"
        app:backgroundTint="@color/ballBlue"
        app:layout_constraintBottom_toTopOf="@+id/ball_miss_button"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/ball_pink_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ball_brown_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_pink_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="handlePottedBall"
        app:backgroundTint="@color/ballPink"
        app:layout_constraintBottom_toBottomOf="@+id/ball_blue_button"
        app:layout_constraintEnd_toStartOf="@+id/ball_black_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ball_blue_button"
        app:layout_constraintTop_toTopOf="@+id/ball_blue_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_black_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="handlePottedBall"
        app:backgroundTint="@color/ballBlack"
        app:layout_constraintBottom_toBottomOf="@+id/ball_pink_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ball_pink_button"
        app:layout_constraintTop_toTopOf="@+id/ball_pink_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_miss_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/ballRed"
        app:backgroundTint="@color/ballMiss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ball_red_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="handlePottedBall"
        android:visibility="visible"
        app:backgroundTint="@color/ballRed"
        app:layout_constraintBottom_toTopOf="@+id/ball_miss_button"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/striking_player_label" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Group
        android:id="@+id/team_mode_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="team_1_score_label,team_2_player_2,team_1_player_2,textView4,textView7,team_2_score_label"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Group
        android:id="@+id/break_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="ball_brown_button,ball_pink_button,ball_yellow_button,ball_blue_button,ball_green_button,ball_black_button" />

    <Button
        android:id="@+id/foul_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/ballRed"
        android:text="@string/foul"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ball_miss_button"
        app:layout_constraintEnd_toStartOf="@+id/ball_miss_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ball_miss_button" />

    <Button
        android:id="@+id/end_frame_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/end_frame"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ball_miss_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ball_miss_button"
        app:layout_constraintTop_toTopOf="@+id/ball_miss_button" />


</android.support.constraint.ConstraintLayout>
