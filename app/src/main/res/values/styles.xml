<resources>

    <style name="GrassTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimarySecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSecondary</item>
        <item name="colorAccent">@color/colorAccentSecondary</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:windowBackground">@color/colorPrimaryLightSecondary</item>-->

        <item name="buttonStyle">@style/GrassButtonStyle</item>
    </style>

    <style name="SkyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:windowBackground">@color/colorPrimaryLight</item>-->

        <item name="buttonStyle">@style/SkyButtonStyle</item>
    </style>

    <style name="GrassButtonStyle">
        <item name="android:background">@color/colorAccentSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/buttonPadding</item>
        <item name="android:paddingBottom">@dimen/buttonPadding</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SkyButtonStyle">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/buttonPadding</item>
        <item name="android:paddingBottom">@dimen/buttonPadding</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
