<resources>

    <style name="GrassTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/grassColorPrimary</item>
        <item name="colorPrimaryDark">@color/grassColorPrimaryDark</item>
        <item name="colorAccent">@color/grassColorAccent</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:windowBackground">@color/colorPrimaryLightSecondary</item>-->

        <item name="buttonStyle">@style/GrassButtonStyle</item>
    </style>

    <style name="SkyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/skyColorPrimary</item>
        <item name="colorPrimaryDark">@color/skyColorPrimaryDark</item>
        <item name="colorAccent">@color/skyColorAccent</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:windowBackground">@color/colorPrimaryLight</item>-->

        <item name="buttonStyle">@style/SkyButtonStyle</item>
    </style>

    <style name="GrassButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/grassColorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/buttonPadding</item>
        <item name="android:paddingBottom">@dimen/buttonPadding</item>
        <item name="android:textSize">@dimen/textButtonSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="SkyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/skyColorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/buttonPadding</item>
        <item name="android:paddingBottom">@dimen/buttonPadding</item>
        <item name="android:textSize">@dimen/textButtonSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawableTint">@color/black</item>
    </style>
</resources>
